  <form action="/gallery/{{dataValues.id}}?_method=PUT" class="editForm" method="POST" enctype ="application/x-www-form-urlencoded">
    <label for="author">Author: </label>
    <input type = "text" name="author" value="{{Author.dataValues.name}}">
    <br>
    <br>
    <label for="url">Image url: </label>
    <input type = "text" name="url" value="{{dataValues.url}}">
    <br>
    <br>
    <label for="description">Description: </label>
    <input type = "text" name="description" value="{{dataValues.description}}">
    <br>
    <br>
    <input type="hidden" name="id" value="{{dataValues.id}}">
    <input type = "submit" name="submit" value="submit">

  </form>

</div>